<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--关于点击密码框后下滑线的颜色-->
    <style name="TextInputLineColor" >
        <item name="colorControlActivated">#3070BF</item>
    </style>
    <!--点击密码框后浮动文字-->
    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#424242</item>

    </style>
    <!--关于超出限制字数时的提示文字的颜色和大小-->
    <style name="counterOverflowTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff0014</item>
    </style>
    
</resources>
