<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.mobile.qg.qgnetdisk.ui.ResetPasswordActivity">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_reset_first_password"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="62dp"
        app:counterOverflowTextAppearance="@style/counterOverflowTextAppearance"
        android:layout_marginRight="58dp"
        android:theme="@style/TextInputLineColor"
        app:hintTextAppearance="@style/hintAppearance"
        android:hint="请输入新的密码">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/et_reset_first_password"
            android:gravity="center_vertical"
            />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:theme="@style/TextInputLineColor"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterOverflowTextAppearance="@style/counterOverflowTextAppearance"
        android:id="@+id/til_reset_second_password"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="62dp"
        app:hintTextAppearance="@style/hintAppearance"
        android:layout_marginRight="58dp"
        android:hint="再一次输入新密码">
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text=""
        android:id="@+id/et_reset_second_password"
        android:gravity="center_vertical"
        />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_reset_password"
        android:layout_width="240dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_send"
        android:textColor="#ffff"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="57dp"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:textStyle=""
        android:text="确定" />

</LinearLayout>
