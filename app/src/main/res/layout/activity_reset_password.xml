<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.mobile.qg.qgnetdisk.ui.ResetPasswordActivity">

    <ImageView
        android:id="@+id/reset_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:src="@drawable/icon_appbar_return" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="@string/enter_password"
        android:textColor="#424242"
        android:textSize="28sp" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_reset_first_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="60dp"
        android:hint="@string/enter_password"
        android:theme="@style/TextInputLineColor"
        app:counterOverflowTextAppearance="@style/counterOverflowTextAppearance"
        app:hintTextAppearance="@style/hintAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_reset_first_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_reset_second_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_reset_first_password"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:hint="再一次输入新密码"
        android:theme="@style/TextInputLineColor"
        app:counterOverflowTextAppearance="@style/counterOverflowTextAppearance"
        app:hintTextAppearance="@style/hintAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_reset_second_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/reset_confirm"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/til_reset_second_password"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/btn_send"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>
