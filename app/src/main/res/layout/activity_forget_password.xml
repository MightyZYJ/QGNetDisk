<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mobile.qg.qgnetdisk.ui.ForgetPasswordActivity">

    <ImageView
        android:id="@+id/forget_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:src="@drawable/icon_appbar_return" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="@string/enter_email"
        android:textColor="#424242"
        android:textSize="28sp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_forget_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="60dp"
        android:hint="@string/email"
        android:theme="@style/TextInputLineColor"
        app:counterOverflowTextAppearance="@style/counterOverflowTextAppearance"
        app:hintTextAppearance="@style/hintAppearance">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_forget_email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/forget_verificationCode"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/til_forget_email"
        android:layout_marginStart="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/btn_send"
        android:gravity="center"
        android:text="@string/get_verify_code"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>
