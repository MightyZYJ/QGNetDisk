<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.mobile.qg.qgnetdisk.activities.ForgetPasswordActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#424242"
        android:text="请输入您的邮箱"
        android:textSize="28sp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:singleLine="false"
        android:layout_marginTop="40dp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/til_forget_email"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="62dp"
        app:counterOverflowTextAppearance="@style/counterOverflowTextAppearance"
        android:layout_marginRight="58dp"
        android:theme="@style/TextInputLineColor"
        app:hintTextAppearance="@style/hintAppearance"
        android:hint="邮箱">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/et_forget_email"
            android:inputType="textEmailAddress"
            android:gravity="center_vertical"
            />

        <Button
            android:id="@+id/btn_forget_verificationCode"
            android:layout_width="240dp"
            android:layout_height="36dp"
            android:background="@drawable/btn_send"
            android:textColor="#ffff"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:textSize="15sp"
            android:textStyle=""
            android:text="获取验证码" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
