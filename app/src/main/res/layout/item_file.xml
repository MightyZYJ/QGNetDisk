<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/selector_file">

    <CheckBox
        android:id="@+id/file_select"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/file_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/file_select"
        android:src="@color/colorPrimary" />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/file_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="我的资源"
        android:textColor="#1F1F1F"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/file_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_name"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/file_icon"
        android:text="30KB"
        android:textColor="#8A8A8A"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/file_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/file_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/file_length"
        android:text="2016-08-18"
        android:textColor="#8A8A8A"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/file_operate"
        android:layout_width="42dp"
        android:layout_height="26dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        android:src="@drawable/icon_moreactivities" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#DEDEDE" />

</RelativeLayout>